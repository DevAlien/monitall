{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env", ".env"],
  "pipeline": {
    "db:generate": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "db:push": {
      "inputs": ["prisma/schema.prisma"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {},
    "clean": {
      "cache": false
    },

    "type-check": {
      "dependsOn": ["^db:generate", "build"],
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "DATABASE_URL",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",
    "VERCEL",
    "VERCEL_URL",

    "NEXT_PUBLIC_APP_URL",
    "STRIPE_WEBHOOK_SECRET"
  ]
}
